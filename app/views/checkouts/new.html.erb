<div class="row">
	<div class="page-header text-center"><h3>Checkout User Registration and Shipping details Page</h3></div>
	<div class="col-md-6 col-md-offset-3">
	<%= form_for (@user), url: checkout_registration_path, :class => "form-horizontal" do |f| %>
		<div class="form-group">
		   <div class="col-sm-4">
		   <%= f.label(:name, "Name: ") %>
		   </div>
		   <div class="col-sm-8">
		   <%= f.text_field :name, :placeholder => "Name", :class => "form-control" %>
		   </div>
		</div>
		<div class="form-group">
		   <div class="col-sm-4">
		   <%= f.label(:email, "Email: ") %>
		   </div>
		   <div class="col-sm-8">
		   <%= f.text_field :email, :placeholder => "Email", :class => "form-control"  %>
		   </div>
		</div>
		<div class="form-group">
		   <div class="col-sm-4">
		   <%= f.label(:phone, "Phone: ") %>
		   </div>
		   <div class="col-sm-8">
		   <%= f.telephone_field :phone, :placeholder => "Phone", :class => "form-control"  %>
		   </div>
		</div>
		<div class="form-group">
		   <div class="col-sm-4">
		   <%= f.label(:address, "Address: ") %>
		   </div>
		   <div class="col-sm-8">
		   <%= f.text_area :address, :placeholder => "Address", :class => "form-control"  %>
		   </div>
		</div>
		<div class="form-group">
		   <div class="col-sm-4">
		   <%= f.label(:city, "City: ") %>
		   </div>
		   <div class="col-sm-8">
		   <%= f.text_field :city, :placeholder => "City", :class => "form-control"  %>
		   </div>
		</div>
		<div class="form-group">
		   <div class="col-sm-4">
		   <%= f.label(:country, "Country: ") %>
		   </div>
		   <div class="col-sm-8">
		   <%= f.text_field :country, :placeholder => "Country", :class => "form-control"  %>
		   </div>
		</div>						
	   <div class="col-sm-4">

	   </div>
	   <div class="col-sm-8">

	   <%= submit_tag("Submit") %>

	   </div>		
	<% end %>
	</div>
			
</div>