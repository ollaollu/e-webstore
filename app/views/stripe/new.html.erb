<div class="row">
	<div class="page-header text-center"><h3>Credit Card Payment - Stripe</h3></div>
	<div class="col-md-6 col-md-offset-3">
		<%= form_tag new_stripe_path do %>
		 <article>
		     <%= label_tag 'amount', 'To Pay', class: 'amount' %>
		     <%= label_tag 'amount', "2000.00", class: 'amount-figure' %>
		 </article>
		 
		 <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
		    data-key="<%= ENV['stripe_publishable_key'] %>"
		    data-description="HC description"
		    data-name="HC product"
		    data-amount="2000">
		  </script>
		<% end %>
	</div>
</div>

