<div class="row">
	<div class="page-header text-center"><h3>User Account Login</h3></div>
	<div class="col-md-6 col-md-offset-3">
	<%= form_for(:session, url: login_path) do |f| %>
		<div class="form-group">
		   <div class="col-sm-4">
		   <%= f.label(:email, "Email: ") %>
		   </div>
		   <div class="col-sm-8">
		   <%= f.text_field :email, :placeholder => "Email", :class => "form-control" %>
		   </div>
		</div>
		<div class="form-group">
		   <div class="col-sm-4">
		   <%= f.label(:password, "Password: ") %>
		   </div>
		   <div class="col-sm-8">
		   <%= f.password_field :password, :placeholder => "Password", :class => "form-control" %>
		   </div>
		</div>										
	   <div class="col-sm-4">

	   </div>
	   <div class="col-sm-8">

	   <%= f.submit "Login" %>

	   </div>		
	<% end %>
	</div>
			
</div>