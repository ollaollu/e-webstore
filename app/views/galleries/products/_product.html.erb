
	<div class="col-sm-4">
		<div class="panel panel-default">
			<div class="panel-body">
              		<div class="row">
                        <div class="col-xs-12 col-sm-7">
                        	<h4><%= product.name %></h4>
                        	<hr>
                            <p>
                            	<%= product.description %>
                            </p>
                        </div>          
                        <div class="col-xs-12 col-sm-5 text-center">
                            <% product.pictures.each do |image| %>
						        <%= image_tag product.pictures.first.image.url(:preview), :class => "img-responsive" %>
							<% end %>
                        </div>

                        <div class="col-xs-12 col-sm-12">
                            <h2><strong> $<%= product.price %> </strong></h2>                    
                            <button class="btn btn-success btn-block"><span class="fa fa-plus-circle"></span> Add to Cart </button>
                            <button class="btn btn-danger btn-block"><span class="fa fa-plus-circle"></span> Remove from Cart </button>
                        </div>
              		</div>
              </div>
          </div>
    </div>
	


